{% extends 'base.html.twig' %}

{% block title %}Réparations {% endblock %}
{% block meta %}
    <meta name="robots" content="noindex, nofollow" />
{% endblock %}

{% block body %}

    <link rel="stylesheet" href="{{ asset("css/clesMinute.css") }}"  >



   <div class="container ">
       <div class="row d-flex justify-content-center mt-5 mb-5">
           <div class="col-6 col-lg-6 col-md-12 col-sm-12">
               <a href="{{ path('list-marques-categorie', {'id' : 1}) }}" type="button" class="btn btn-dark btn-lg w-100 shadow rounded" >
                  <span class="d-flex justify-content-center align-items-center">
                       <span> <i class="fa fa-mobile fa-3x marqueButtonsFa" aria-hidden="true"></i></span>
                       <p class="d-flex align-items-center ms-3 marqueButtonsTxt"> Réparation téléphone</p>
                  </span>
               </a>
           </div>
           <div class="col-6 col-lg-6 col-md-12 col-sm-12 mt-lg-0 mt-mb-5 mt-sm-5">
               <a href="{{ path('list-marques-categorie', {'id' : 2}) }}" type="button" class="btn btn-dark btn-lg  w-100 shadow rounded">
                   <span class="d-flex justify-content-center">
                       <span> <i class="fa fa-tablet fa-3x marqueButtonsFa" aria-hidden="true"></i></span>
                       <p class="d-flex align-items-center ms-3 marqueButtonsTxt"> Réparation tablette</p>
                   </span>
                </a>
           </div>

           <div class="col-12 col-lg-6  col-md-12 col-sm-12 mt-lg-5 mt-mb-5 mt-sm-5">
               <a href="{{ path('reparationOrdinateur') }}" type="button" class="btn btn-dark btn-lg  w-100 shadow rounded" >
                   <span class="d-flex justify-content-center">
                       <span> <i class="fa fa-laptop fa-3x marqueButtonsFa" aria-hidden="true"></i></span>
                       <p class="d-flex align-items-center ms-3 marqueButtonsTxt"> Réparation ordinateur</p>
                   </span>
               </a>
           </div>

       </div>




       <div class="row mb-5 mt-5">
            {% for marque in marques %}
        <div class="col-3 col-md-4">
            <a href="{{ path('list-produits-marque', {'id' : marque.id}) }}">
                <div  class="smoothCard">
                    <div class="imageCover_brand" style="width: 100%;height: 200px">
                        <img style="object-fit: cover; max-height: 100%; max-width: 100%" src="{{ asset("images/brand_images/" ~ marque.image ) }}" alt="{{ marque.image }}">
                    </div>
                </div>
            </a>
        </div>
            {% endfor %}
        </div>
   </div>
{% endblock %}
